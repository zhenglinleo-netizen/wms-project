<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.wms.mapper.SupplierProductMapper">
    
    <resultMap id="BaseResultMap" type="com.example.wms.entity.SupplierProduct">
        <id column="id" property="id"/>
        <result column="supplier_id" property="supplierId"/>
        <result column="product_id" property="productId"/>
        <result column="price" property="price"/>
        <result column="status" property="status"/>
    </resultMap>
    
    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM supplier_product WHERE id = #{id}
    </select>
    
    <select id="selectBySupplierId" resultMap="BaseResultMap">
        SELECT * FROM supplier_product WHERE supplier_id = #{supplierId}
    </select>
    
    <select id="selectByProductId" resultMap="BaseResultMap">
        SELECT * FROM supplier_product WHERE product_id = #{productId}
    </select>
    
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM supplier_product
    </select>
    
    <select id="selectBySupplierIdAndProductId" resultMap="BaseResultMap">
        SELECT * FROM supplier_product WHERE supplier_id = #{supplierId} AND product_id = #{productId}
    </select>
    <insert id="insert" parameterType="com.example.wms.entity.SupplierProduct" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO supplier_product (supplier_id, product_id, price, status)
        VALUES (#{supplierId}, #{productId}, #{price}, #{status})
    </insert>
    
    <update id="updateById" parameterType="com.example.wms.entity.SupplierProduct">
        UPDATE supplier_product
        <set>
            <if test="supplierId != null">supplier_id = #{supplierId},</if>
            <if test="productId != null">product_id = #{productId},</if>
            <if test="price != null">price = #{price},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>    
    <delete id="deleteById">
        DELETE FROM supplier_product WHERE id = #{id}
    </delete>
    
    <delete id="deleteBySupplierId">
        DELETE FROM supplier_product WHERE supplier_id = #{supplierId}
    </delete>
    
    <delete id="deleteByProductId">
        DELETE FROM supplier_product WHERE product_id = #{productId}
    </delete>
</mapper>