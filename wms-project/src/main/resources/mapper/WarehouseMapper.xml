<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.wms.mapper.WarehouseMapper">

    <resultMap id="BaseResultMap" type="com.example.wms.entity.Warehouse">
        <id column="id" property="id"/>
        <result column="warehouse_code" property="warehouseCode"/>
        <result column="warehouse_name" property="warehouseName"/>
        <result column="address" property="address"/>
        <result column="capacity" property="capacity"/>
        <result column="manager" property="manager"/>
        <result column="phone" property="phone"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM warehouse WHERE id = #{id}
    </select>

    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT * FROM warehouse WHERE warehouse_code = #{warehouseCode}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM warehouse ORDER BY create_time DESC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO warehouse (warehouse_code, warehouse_name, address, capacity, manager, phone, status)
        VALUES (#{warehouseCode}, #{warehouseName}, #{address}, #{capacity}, #{manager}, #{phone}, #{status})
    </insert>

    <update id="update">
        UPDATE warehouse
        <set>
            <if test="warehouseName != null">warehouse_name = #{warehouseName},</if>
            <if test="address != null">address = #{address},</if>
            <if test="capacity != null">capacity = #{capacity},</if>
            <if test="manager != null">manager = #{manager},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM warehouse WHERE id = #{id}
    </delete>

</mapper>




