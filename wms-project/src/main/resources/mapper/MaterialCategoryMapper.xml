<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.wms.mapper.MaterialCategoryMapper">

    <resultMap id="BaseResultMap" type="com.example.wms.entity.MaterialCategory">
        <id column="id" property="id"/>
        <result column="category_name" property="categoryName"/>
        <result column="parent_id" property="parentId"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectByName" resultMap="BaseResultMap">
        SELECT * FROM material_category WHERE category_name = #{categoryName}
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM material_category WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM material_category ORDER BY sort_order ASC, id ASC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO material_category (category_name, parent_id, sort_order, description)
        VALUES (#{categoryName}, #{parentId}, #{sortOrder}, #{description})
    </insert>

    <update id="update">
        UPDATE material_category
        <set>
            <if test="categoryName != null">category_name = #{categoryName},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="description != null">description = #{description},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM material_category WHERE id = #{id}
    </delete>

</mapper>
